// INPUT: RAW NESARC DATA IN TWO WAVES// OUTPUT: CLEANED AS ON DATASET WITH CONDITION INDICATORS, IDS, DEMOGRAPHIC INFO, AND SF12 SCORES. // Bring in wave 1use "./FILEPATH.dta", clearrename	c1a		Iasthmarename	c2		Ibronchitisrename	c3		Ianaemiarename	c4		Iblood_pressrename	c5		Iheart_troubrename	c6		Iarthritisrename	c7		Ikidney_disrename	c8		Idiabetesrename	c9		Icancerrename	c10		Iulcerrename	c11		Iliver_gallbladderrename	c12		Ihernia_rupturerename	danx12	Ianxiety12rename	ddepa12	Imild_depr12rename	ddepb12	Imod_depr12rename	ddepc12	Isevere_depr12rename	ddys12	Idysthymia12// rename	dalca12	Ialcohol_abuse12rename	dalcd12	Ialcohol_depend12rename	ddrgd12	Idrug_depend12rename	danx1	Ianxiety1rename	ddepa1	Imild_depr1rename	ddepb1	Imod_depr1rename	ddepc1	Isevere_depr1rename	ddys1	Idysthymia1// rename	dalca1	Ialcohol_abuse1rename	dalcd1	Ialcohol_depend1rename	ddrgd1	Idrug_depend1foreach var of varlist I* {	recode `var' 0=0 1=0 5=1 2=1}egen Idepression12 = rowtotal(*_depr12)replace Idepression12 =1 if Idepression12 > 1egen Idepression1 = rowtotal(*_depr1)replace Idepression1 =1 if Idepression1 > 1rename		Imild_depr12    Xmild_depr12 rename		Imod_depr12     Xmod_depr12rename		Isevere_depr12   Xsevere_depr12rename		Imild_depr1     Xmild_depr1 rename		Imod_depr1      Xmod_depr1rename		Isevere_depr1   Xsevere_depr1// make reference category healthygen I_NONE = 0// age dummiesrename age _agedecode _age, gen(age)replace age = substr(age,1,2)destring age, replace// drop if age == 18rename a1 sex// Crosswalk SF to DWgen composite = pcs + mcsgen key = _nrename composite predictappend using ".FILEPATH/1_crosswalk_data.dta"replace key = -999 if key == .save ".FILEPATH/2a_ahs_prepped_to_crosswalk.dta", replacekeep sf dw key predictsave ".FILEPATH/2a_ahs_crosswalk_key.dta", replace